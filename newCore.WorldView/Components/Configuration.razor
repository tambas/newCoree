@using Giny.WorldView.Config;

<MudContainer>
    <br />
    <MudTextField @bind-Value="ConfigFile.Instance.SQLHost" Label="Ip MySQL" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Filled.SettingsEthernet" AdornmentColor="Color.Primary" />
    <br />
    <MudTextField @bind-Value="ConfigFile.Instance.SQLDBName" Label="Nom de la base" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Filled.Layers" AdornmentColor="Color.Primary" />
    <br />
    <MudTextField @bind-Value="ConfigFile.Instance.SQLUser" Label="Nom d'utilisateur" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Filled.People" AdornmentColor="Color.Primary" />
    <br />
    <MudTextField @bind-Value="ConfigFile.Instance.SQLPassword" Label="Mot de passe" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Filled.Password" AdornmentColor="Color.Primary" />
    <br />
    <MudButton OnClick=OnSaveClick StartIcon="@Icons.Filled.Save" Style="height: 50px;float:right" Variant="Variant.Filled" Size="Size.Large" Color="Color.Primary">Sauvegarder</MudButton>
</MudContainer>

@code {
    [CascadingParameter]
    public Home Parent
    {
        get;
        set;
    }

    private void OnSaveClick()
    {
        ConfigFile.Save();
        Parent.Navigate(PageEnum.Loader);
    }
}
